<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.core.dao.ITravelsDAO">
	<resultMap id="travels_DB_Result" type="travels">
		<result column="code" property="code" />
		<result column="title" property="title" />
		<result column="description" property="description" />
		<result column="pic" property="pic" />
		<result column="run_team_list" property="runTeamList" />
		<result column="location" property="location" />
		<result column="order_no" property="orderNo" />
		<result column="collection_times" property="collectionTimes" />
		<result column="like_times" property="likeTimes" />
		<result column="ds_times" property="dsTimes" />
		<result column="status" property="status" />
		<result column="publisher" property="publisher" />
		<result column="publish_datetime" property="publishDatetime" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
		<result column="company_code" property="companyCode" />
		<result column="system_code" property="systemCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="title != null and title != '' ">
				AND t.title like "%"#{title}"%"
			</if>
			<if test="description != null and description != '' ">
				AND t.description like "%"#{description}"%"
			</if>
			<if test="runTeamList != null and runTeamList != '' ">
				AND t.run_team_list = #{runTeamList}
			</if>
			<if test="location != null and location != '' ">
				AND t.location = #{location}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="publisher != null and publisher != '' ">
				AND t.publisher = #{publisher}
			</if>
			<if test="publishDatetimeStart != null and publishDatetimeStart != '' ">
				<![CDATA[AND t.publish_datetime >= #{publishDatetimeStart}]]>
			</if>
			<if test="publishDatetimeEnd != null and publishDatetimeEnd != '' ">
				<![CDATA[AND t.publish_datetime <= #{publishDatetimeEnd}]]>
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	<select id="select_travels" parameterType="travels" resultMap="travels_DB_Result">
		SELECT
		t.code
		,t.title
		,t.description
		,t.pic
		,t.run_team_list
		,t.location
		,t.order_no
		,t.collection_times
		,t.like_times
		,t.ds_times
		,t.status
		,t.publisher
		,t.publish_datetime
		,t.updater
		,t.update_datetime
		,t.remark
		,t.company_code
		,t.system_code
		FROM
		tstd_travels t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_travels_count" parameterType="travels"
		resultType="java.lang.Long">
		SELECT count(1) FROM tstd_travels t
		<include refid="where_condition" />
	</select>

	<insert id="insert_travels" parameterType="travels">
		INSERT INTO
		tstd_travels(
		code
		,title
		,description
		,pic
		,run_team_list
		,location
		,order_no
		,collection_times
		,like_times
		,ds_times
		,status
		,publisher
		,publish_datetime
		,company_code
		,system_code
		)
		VALUES(
		#{code}
		,#{title}
		,#{description}
		,#{pic}
		,#{runTeamList}
		,#{location}
		,#{orderNo}
		,#{collectionTimes}
		,#{likeTimes}
		,#{dsTimes}
		,#{status}
		,#{publisher}
		,#{publishDatetime}
		,#{companyCode}
		,#{systemCode}
		)
	</insert>
	
	<update id="delete_travels" parameterType="travels">
		UPDATE tstd_travels
		SET
		status = '3'
		WHERE code = #{code}
	</update>

	<update id="update_travels" parameterType="travels">
		UPDATE tstd_travels
		SET
		title = #{title}
		,description = #{description}
		,run_team_list = #{runTeamList}
		,pic = #{pic}
		,status = #{status}
		,publisher = #{publisher}
		,publish_datetime = #{publishDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="update_location" parameterType="travels">
		UPDATE tstd_travels
		SET
		location = #{location}
		,order_no = #{orderNo}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_status" parameterType="travels">
		UPDATE tstd_travels
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
</mapper>